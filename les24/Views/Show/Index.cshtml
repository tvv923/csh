@model IEnumerable<Show>

@{
    ViewData["title"] = "Detail List";
    string name = Context.Request.Query["name"];
}
<div class="container shadow p-5">
        <h1>Details List</h1>    
        
        <h4>Movie name: @name</h4>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Show Time</th>                
                </tr>
            </thead>
            <tbody>
                @foreach (var show in Model)
                {
                    <tr>
                        <td width="20%">@show.ShowTime</td>                    
                    </tr>
                }
            </tbody>
        </table>

        <a asp-controller="Movie" asp-action="Index" class="btn btn-md btn-outline-warning p-2">Movie List</a>    
</div>
