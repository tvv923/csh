@model Note

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Note</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Title" required>
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Text">Text</label>
                <input type="text" class="form-control mb-3" asp-for="Text" placeholder="Enter Text" required>
                <span asp-validation-for="Text" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CreationDate">Creation Date</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="CreationDate" placeholder="Enter Creation Date">
                <span asp-validation-for="CreationDate" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Tags">Tags</label>
                <input type="text" class="form-control" asp-for="Tags" placeholder="Enter Tags">
                <span asp-validation-for="Tags" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-md btn-outline-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-md btn-outline-warning p-2">Note List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}