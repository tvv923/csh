@model IEnumerable<Movie>

@{
    ViewData["title"] = "Movie List";
}
<div class="container shadow p-5">
    <h1>Movie List</h1>

    <div>
        <span class="col mb-3">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-md btn-outline-primary"><i class="bi bi-file-plus-fill"></i>Add Movie</a>
        </span>
        <span class="col mb-3">
            <a asp-controller="Movie" asp-action="Find" class="btn btn-md btn-outline-primary"><i class="bi bi-file-plus-fill"></i>Search Movie</a>
        </span>       
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Director</th>
                <th scope="col">Style</th>
                <th scope="col">Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td width="20%">@movie.Name</td>
                    <td width="20%">@movie.Director</td>
                    <td width="20%">@movie.Style</td>
                    <td width="25%">@movie.Description</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <span style="margin-right: 5px;">
                                <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                            <span>
                                <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </span>
                            <span>
                                <a asp-controller="Show" asp-action="Index" asp-route-id="@movie.Id" asp-route-name="@movie.Name" class="btn btn-sm btn-outline-success"><i class="bi bi-trash-fill"></i>Details</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
