@model IEnumerable<Contact>

@{
    ViewData["title"] = "Contact List";
}
<div class="container shadow p-5">
    <h1>Contact List</h1>

    <div class="col mb-3">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-md btn-outline-primary"><i class="bi bi-file-plus-fill"></i>Add Contact</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">AlternativePhone</th>
                <th scope="col">Email</th>
                <th scope="col">Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td width="20%">@contact.Name</td>
                    <td width="20%">@contact.Phone</td>
                    <td width="25%">@contact.AlternativePhone</td>
                    <td width="20%">@contact.Email</td>
                    <td width="20%">@contact.Description</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <span style="margin-right: 5px;">
                                <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                            <span>
                                <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
