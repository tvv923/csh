@model Contact


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Contact</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name" required>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Phone" required>
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AlternativePhone">Alternative Phone</label>
                <input type="text" class="form-control mb-3" asp-for="AlternativePhone" placeholder="Enter Alternative Phone">
                <span asp-validation-for="AlternativePhone" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>           
        </div>

        <button type="submit" class="btn btn-md btn-outline-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-md btn-outline-warning p-2">Contact List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}