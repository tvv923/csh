@model Movie

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Movie</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name" required>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Director">Director</label>
                <input type="text" class="form-control mb-3" asp-for="Director" placeholder="Enter Director" required>
                <span asp-validation-for="Director" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Style">Style</label>
                <input type="text" class="form-control mb-3" asp-for="Style" placeholder="Enter Style" required>
                <span asp-validation-for="Style" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description" required>
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-md btn-outline-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Movie" asp-action="Index" class="btn btn-md btn-outline-warning p-2">Movie List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}