@model IEnumerable<Movie>

@{
    ViewData["title"] = "Search Result";
}
<div class="container shadow p-5">
    <h1>Search Result</h1>

    <div class="col mb-3">
        <a asp-controller="Movie" asp-action="Index" class="btn btn-md btn-outline-warning p-2">Movie List</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Director</th>
                <th scope="col">Style</th>
                <th scope="col">Description</th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td width="20%">@movie.Name</td>
                    <td width="20%">@movie.Director</td>
                    <td width="20%">@movie.Style</td>
                    <td width="25%">@movie.Description</td>                    
                </tr>
            }
        </tbody>
    </table>
</div>
