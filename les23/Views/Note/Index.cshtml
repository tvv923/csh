@model IEnumerable<Note>

@{
    ViewData["title"] = "Note List";
}
<div class="container shadow p-5">
    <h1>Note List</h1>

    <div class="col mb-3">
        <a asp-controller="Note" asp-action="Create" class="btn btn-md btn-outline-primary"><i class="bi bi-file-plus-fill"></i>Add Note</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Text</th>
                <th scope="col">CreationDate</th>
                <th scope="col">Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
            {
                <tr>
                    <td width="20%">@note.Title</td>
                    <td width="20%">@note.Text</td>
                    <td width="25%">@note.CreationDate</td>
                    <td width="20%">@note.Tags</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <span style="margin-right: 5px;">
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                            <span>
                                <a asp-controller="Note" asp-action="Delete" asp-route-id="@note.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
